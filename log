using System;
using System.Collections.Generic;
using System.Text;

namespace Fuso.DeviceManager.Backend
{
    /// <summary>
    /// Application settings
    /// </summary>
    public class AppSettings
    {
        /// <summary>
        /// Jwt issuer details
        /// </summary>
        public string JwtIssuer { get; set; }


        /// <summary>
        /// Jwt expiry in minutes
        /// </summary>
        public double JwtExpiryMinutes { get; set; }

        /// <summary>
        /// Refresh token expiry minutes
        /// </summary>
        public double RefreshTokenExpiryMinutes { get; set; }

        /// <summary>
        /// Get swagger json path
        /// </summary>
        public string SwaggerJsonPath { get; set; }

        /// <summary>
        /// Allowed cors path
        /// </summary>
        public string CorsOrigins { get; set; }

        /// <summary>
        /// When set to true https connection and redirection will be enabled
        /// </summary>
        public bool UseHttps { get; set; }

        /// <summary>
        /// Enable http
        /// </summary>

        public bool UseHttp { get; set; }

        /// <summary>
        /// Http port
        /// </summary>
        public int HttpPort { get; set; }

        /// <summary>
        /// Https port number
        /// </summary>
        public int Port { get; set; }

        /// <summary>
        /// TLS port number
        /// </summary>
        public int MutualTlsPort { get; set; }

        /// <summary>
        /// Development port
        /// </summary>
        public int DevPort { get; set; }

        /// <summary>
        /// Base folder for connector configuration
        /// </summary>
        public string AgentBase { get; set; }

        /// <summary>
        /// Base folder for connector configuration
        /// </summary>
        public string DomainName { get; set; }

        /// <summary>
        /// Base folder for FileList
        /// </summary>
        public string ArtifactBase { get; set; }

        /// <summary>
        /// Certificate file
        /// </summary>
        public string CertificateFile { get; set; }

        /// <summary>
        /// Certificate password
        /// </summary>
        public string CertificatePassword { get; set; }

        /// <summary>
        /// Check if role has to be taken from simulation
        /// Should be false in production
        /// </summary>
        public bool SimulateADRoles { get; set; }

        /// <summary>
        /// Path where data will be stored
        /// </summary>
        public string DataPath { get; set; }

        /// <summary>
        /// Enable mutual TLS
        /// </summary>
        public bool UseMutualTls { get; set; }
    }
}
