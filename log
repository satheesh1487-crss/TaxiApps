 /// <summary>
        /// Static folder path
        /// </summary>
        public DirectoryInfo Folder { get; private set; }

        /// <summary>
        /// File cache
        /// </summary>
        private Dictionary<string, IFileInfo> Cache { get; set; }

        public StaticFolder(string relativePath)
        {
            Folder = Reflections.GetRootRelativeDir(relativePath);
            Cache = new Dictionary<string, IFileInfo>();
        }

        /// <summary>
        /// Get file
        /// </summary>
        /// <param name="path"></param>
        /// <returns></returns>
        public IFileInfo GetFile(string path)
        {
            if (!Cache.ContainsKey(path))
            {
                var file = Reflections.GetRootRelativeFile(Folder.FullName, path);
                Cache[path] = new StaticFile(file);
            }

            return Cache[path];
        }
